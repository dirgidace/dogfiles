#!/bin/sh

interfaces=$(nmcli -t -f name connection show --active | grep -v lo)

if echo "$interfaces" | grep -q "Wired connection *"
then
    icon="󰈁"
    name=""
    color=""
elif [[ ! -z $(echo "$interfaces" | grep -v lo) ]] 
then
    icon=""
    name=$(echo "$interfaces" | grep -v lo)  
    color=""
else
    icon="󱛅"
    name=""
    color="\x04"
fi

echo -e "$color$icon $name\x03"

