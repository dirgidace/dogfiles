#!/bin/sh

if [ "$(pamixer --get-mute)" = true ]; then
    echo -e "\x04󰝟\x03"
    exit
fi

vol="$(pamixer --get-volume)"
[ $? -ne 0 ] && [ -z "$vol" ] && exit 1

if [ "$vol" -gt 70 ]; then
    icon=" "
elif [ "$vol" -gt 20 ]; then
    icon="󰕾 "
elif [ "$vol" -gt 0 ]; then
    icon=" "
else
    icon=" "
fi

echo -e "$icon$vol%"
